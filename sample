pipeline {
    agent { docker { image 'python:3.5.1' } }
    stages {
        stage('build') {
            steps {
                sh 'python --version'
            }
        }
    }
    stages {
        triggers 
                { 
                cron(env.BRANCH_NAME == 'master' ? '06 18 * * *') 
                }
        }
}
